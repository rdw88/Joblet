<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jobs"
          android:versionCode="1"
          android:versionName="0.1">

    <uses-sdk
            android:minSdkVersion="13"
            android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/logo"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <!-- Standard Activity invocation for MainActivity. -->
        <activity
                android:name="com.jobs.activity.Welcome"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.Main"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.jobs.activity.Main"
                  android:label="@string/app_name"></activity>

        <activity android:name="com.jobs.activity.CreateAccount"
                  android:label="@string/create_account"></activity>

        <activity android:name="com.jobs.activity.Login"
                  android:label="@string/login"></activity>

        <activity android:name="com.jobs.activity.TagSelector"
                  android:label="@string/app_name"></activity>

        <activity android:name="com.jobs.activity.ListingTags"
                  android:label="@string/app_name"></activity>

        <activity android:name="com.jobs.activity.ViewListing"
            android:label="@string/app_name"></activity>


    </application>


</manifest>
