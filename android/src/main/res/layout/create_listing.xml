<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            >


        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@color/title_color"
                >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="Create Listing"
                      android:textColor="#000000"
                      android:textSize="36dp"
                      android:id="@+id/title_create_listing"
                      android:layout_centerInParent="true"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"/>
        </RelativeLayout>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Job Name:"
                  android:textSize="26sp"
                  android:id="@+id/customFontText"
                  android:textColor="@color/cementInfo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="#ecf0f1"
                android:textSize="22sp"
                android:textColor="#000000"
                android:id="@+id/listing_name"
                android:hint=" Listing Name"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Job Address:"
                  android:textSize="26sp"
                  android:textColor="@color/cementInfo"
                  android:layout_marginStart="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal" />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="#ecf0f1"
                android:textSize="22sp"
                android:textColor="#000000"
                android:id="@+id/listing_location"
                android:hint=" Listing Address"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Owner of Listing:"
                  android:textSize="26sp"
                  android:textColor="@color/cementInfo"
                  android:layout_marginStart="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="@string/user_name"
                  android:textColor="#658BF3"
                  android:textSize="34dp"
                  android:layout_marginTop="15dp"
                  android:layout_centerInParent="true"
            android:layout_marginBottom="15dp" />


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tag:"
                  android:textSize="26sp"
                  android:textColor="@color/cementInfo"
                  android:id="@+id/chosen_tag"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />


        <Button
                android:background="@drawable/button_blue"
                android:id="@+id/set_tag"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Set Tag"
                android:textAllCaps="false"
                style="@style/button_text_medium"
                />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"></RelativeLayout>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/uploaded_picture"
            android:layout_marginBottom="15dp"
            android:visibility="gone"
            android:background="@android:drawable/dialog_holo_dark_frame"/>

        <Button
                android:background="@drawable/button_blue"
                android:id="@+id/button_createListing_uploadPicture"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:text="Upload Picture"
                style="@style/button_text_medium"
                android:layout_gravity="center_horizontal"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="filler for picture path [  ] checkbox to delete"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    />
        </RelativeLayout>


        <Button
                android:background="@drawable/button_blue"
                android:id="@+id/button_createListing_removeCheckedPicture"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:text="Remove Checked Pictures"
                style="@style/button_text_small"
                android:layout_gravity="center_horizontal"
                />

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                ></RelativeLayout>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Start Reverse Bid at:"
                  android:textSize="26sp"
                  android:textColor="@color/cementInfo"
            android:layout_gravity="center" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Enter amount in dollars (ex: 60.50)"
                  android:textSize="16sp"
                  android:textColor="@color/cementInfo"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="#ecf0f1"
                android:textSize="22sp"
                android:textColor="#000000"
                android:id="@+id/starting_amount"
                android:hint=" Starting Amount"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Minimum Applicant Rep:"
                  android:textSize="26sp"
                  android:textColor="@color/cementInfo"
            android:layout_gravity="center" />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="#ecf0f1"
                android:textSize="22sp"
                android:textColor="#000000"
                android:id="@+id/min_reputation"
                android:hint=" Minimum Reputation"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Date and Time Listing Ends:"
                  android:textSize="26sp"
                  android:textColor="@color/cementInfo"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />

        <Button
                android:background="@drawable/button_blue"
                android:id="@+id/button_createListing_pickDate"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:text="Pick Date"
                style="@style/button_text_medium"
                android:layout_gravity="center_horizontal"/>


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                ></RelativeLayout>
        <Button
                android:background="@drawable/button_blue"
                android:id="@+id/button_createListing_postListing"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:text="Post Listing"
                style="@style/button_text"
                android:layout_gravity="center_horizontal"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"></RelativeLayout>


    </LinearLayout>
</ScrollView>
