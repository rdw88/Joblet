<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="145dp"
                android:background="@android:drawable/arrow_up_float"
                >


    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:background="#18A010"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:id="@+id/textView2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_currentBid"
            android:text="@string/list_currentBid"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginBottom="2dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textIsSelectable="false" />

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout3"
        android:layout_alignEnd="@+id/relativeLayout3">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:id="@+id/textView3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:layout_above="@+id/listItem_text_tags"
            android:layout_alignParentTop="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag: "
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/listItem_text_tags"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/job_name"
            android:text="@string/list_title"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/textView3"
            android:layout_toRightOf="@+id/textView3" />

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/relativeLayout"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/relativeLayout2"
        android:background="#5F7EC6"
        android:id="@+id/relativeLayout3">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reputation:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/reputation_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_above="@+id/distance_text"
            android:layout_alignLeft="@+id/distance_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:textSize="16sp"
            android:id="@+id/distance_text"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_distance"
            android:text="@string/owner_listNumber"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/distance_text"
            android:layout_alignBottom="@+id/distance_text"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_reputation"
            android:text="@string/owner_reputation"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/reputation_text"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/reputation_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lists:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/textView"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/distance_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_listNumber"
            android:text="@string/owner_listNumber"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginLeft="5dp" />

        </RelativeLayout>




</RelativeLayout>
