<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="110dp"
                android:background="#F8F9F9"

                android:id="@+id/background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#B4B4B4"
        android:layout_below="@+id/shadefold_two"
        android:id="@+id/shadefold_one"></RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#C6C5C5"
        android:layout_below="@+id/shadefold_three"
        android:id="@+id/shadefold_two"
        android:layout_alignRight="@+id/shadefold_one"></RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#DBDAD9"
        android:layout_below="@+id/shadefold_four"
        android:id="@+id/shadefold_three"
        android:layout_alignRight="@+id/shadefold_one"></RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#DBDAD9"
        android:layout_below="@+id/shadefold_five"
        android:id="@+id/shadefold_four"
        android:layout_alignRight="@+id/shadefold_one"></RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#E5E5E5"
        android:id="@+id/shadefold_five"
        android:layout_alignRight="@+id/shadefold_one"></RelativeLayout>



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#378E43"
        android:layout_marginTop="5dp"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/shadefold_one">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Pay:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:id="@+id/textView2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_currentBid"
            android:text="@string/list_currentBid"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:layout_marginBottom="2dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textIsSelectable="false"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp" />

        </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#5B5B5B"
        android:textSize="12sp"
        android:id="@+id/listItem_text_tags"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="3dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/job_name"
        android:text="@string/list_title"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout"
        android:paddingLeft="3dp" />





    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:background="#3E4DA0"
        android:id="@+id/relativeLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_below="@+id/shadefold_one">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reputation:"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:id="@+id/reputation_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_above="@+id/distance_text"
            android:layout_alignLeft="@+id/distance_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/distance_text"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_distance"
            android:text="@string/owner_listNumber"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/distance_text"
            android:layout_alignBottom="@+id/distance_text"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_reputation"
            android:text="@string/owner_reputation"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/reputation_text"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/reputation_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lists:"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/distance_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_listNumber"
            android:text="@string/owner_listNumber"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginLeft="5dp" />

        </RelativeLayout>




</RelativeLayout>
