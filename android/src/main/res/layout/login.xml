<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FED8A4"
    android:weightSum="1">

    <ImageView android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/logo_welcome"
        android:src="@drawable/logo"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />


    <EditText android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:hint="  Email Address"
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:background="#ecf0f1"
        android:padding="10dp"
        android:layout_below="@+id/logo_welcome"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <EditText android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:hint=" Password"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:background="#ecf0f1"
        android:padding="10dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:id="@+id/checkbox_remember_me"
        android:text="Remember Me"
        android:textColor="#202020"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password" />

    <Button
        android:background="@drawable/button_blue"
        android:id="@+id/login"
        android:layout_width="225dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_height="50dp"
        android:textColor="#F9F9F9"
        android:text="Log In"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/checkbox_remember_me"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/button_blue"
        android:id="@+id/forgotPass"
        android:layout_width="225dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_height="50dp"
        android:textColor="#F9F9F9"
        android:text="Forgot Password"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/login"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/button_blue"
        android:id="@+id/createAccount"
        android:layout_width="225dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:textColor="#F9F9F9"
        android:text="Create Account"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/forgotPass"
        android:layout_centerHorizontal="true" />


</RelativeLayout>