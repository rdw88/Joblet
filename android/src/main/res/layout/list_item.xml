<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:background="#FFFB6C"
                >


    <ImageView android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/profile_picture"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/default_picture"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_userName"
        android:text="@string/list_currentBid"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Title:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_title"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reputation:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owner_reputation"
        android:text="@string/owner_reputation"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lists:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owner_listNumber"
        android:text="@string/owner_listNumber"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="35dp" />



</RelativeLayout>
