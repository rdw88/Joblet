<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf0f1"
    android:orientation="vertical">

<RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="125dp"
                android:background="#ecf0f1"
                >

    <RelativeLayout
        android:layout_width="3dp"
        android:layout_height="fill_parent"
        android:background="#BABABA">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@+id/relativeLayout2">



        </RelativeLayout>

    <ImageView android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profile_picture"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/default_picture"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <RelativeLayout
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:background="#18A010"
        android:layout_toRightOf="@+id/profile_picture"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:id="@+id/textView2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_currentBid"
            android:text="@string/list_currentBid"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_marginBottom="2dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textIsSelectable="false" />

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/profile_picture"
        android:layout_marginLeft="15dp"
        android:background="#ecf0f1"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/relativeLayout2">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/textView3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_above="@+id/listItem_text_tags" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag: "
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/listItem_text_tags"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/job_name"
            android:text="@string/list_title"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/textView3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/textView3" />

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/relativeLayout"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/relativeLayout2"
        android:background="#5F7EC6">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reputation:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/reputation_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_above="@+id/distance_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:textSize="16sp"
            android:id="@+id/distance_text"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_distance"
            android:text="@string/owner_listNumber"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/distance_text"
            android:layout_alignBottom="@+id/distance_text"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_reputation"
            android:text="@string/owner_reputation"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/reputation_text"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/reputation_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lists:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_listNumber"
            android:text="@string/owner_listNumber"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginLeft="5dp" />

        </RelativeLayout>




</RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#BABABA">
        </RelativeLayout>


</LinearLayout>