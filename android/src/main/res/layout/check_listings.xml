<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/custom_theme_color">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="@color/title_color"
        android:layout_marginBottom="20dp"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Check Listings"
            android:textColor="#F2FDFE"
            android:textSize="36dp"
            android:id="@+id/title_landing_page"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </RelativeLayout>
    <Button
        android:background="@drawable/button"
        android:id="@+id/checkListings_filter"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="Filter"
        style="@style/button_text_small"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Active:"
        android:textSize="24sp"
        android:textColor="#ecf0f1"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textIsSelectable="true" />


    <ListView android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="15dp"
              android:id="@+id/listing_list"
              android:background="#FFFB6C"/>

</LinearLayout>