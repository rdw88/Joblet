<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/landing"
    android:background="#F8F9F9"
    android:weightSum="1"
    android:label="Joblet"

    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/pictureFrame"
        android:background="#E6E6E6"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:textSize="20dp"
            android:textColor="#DD000000"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/profile_picture"
            android:layout_alignTop="@+id/profile_picture" />


        <ImageView android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/profile_picture"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/default_picture"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="3dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true" />


        <ImageView android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/reputationUp"
            android:src="@drawable/reputation_up"
            android:layout_marginTop="25dp"
            android:layout_alignBottom="@+id/positive_reputation"
            android:layout_toRightOf="@+id/profile_picture"
            android:layout_marginLeft="32dp" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="#DD000000"
            android:id="@+id/positive_reputation"
            android:textSize="24dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/reputationUp"
            android:layout_below="@+id/user_name" />

        <ImageView android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/reputationDown"
            android:src="@drawable/reputation_down"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/reputationUp"
            android:layout_alignLeft="@+id/reputationUp"
            android:layout_marginTop="5dp" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/negative_reputation"
            android:textSize="24dp"
            android:text="00"
            android:textColor="#DD000000"
            android:layout_toRightOf="@+id/reputationDown"
            android:layout_marginLeft="3dp"
            android:layout_alignBottom="@+id/reputationDown" />


        </RelativeLayout>


    <Space android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true" />



    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:textStyle="bold"
        android:text="Lists:"
        android:textColor="#DD000000"
        android:id="@+id/lists_label"
        android:layout_below="@+id/jobs_label"
        android:layout_alignLeft="@+id/jobs_label"
        android:paddingLeft="16dp" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:hint="00"
        android:textColor="#202020"
        android:id="@+id/lists_completed"
        android:layout_toRightOf="@+id/lists_label"
        android:layout_alignTop="@+id/lists_label"
        android:layout_marginLeft="3dp" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:textStyle="bold"
        android:text="Jobs:"
        android:textColor="#DD000000"
        android:id="@+id/jobs_label"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/userTags"
        android:paddingLeft="16dp" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:hint="00"
        android:textColor="#202020"
        android:id="@+id/jobs_completed"
        android:layout_toRightOf="@+id/jobs_label"
        android:layout_marginLeft="3dp"
        android:layout_alignTop="@+id/jobs_label" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="24dp"
        android:textColor="#DD000000"
        android:id="@+id/location"
        android:text="@string/user_currentLocation"
        android:paddingTop="5dp"
        android:paddingRight="8dp"
        android:paddingLeft="16dp"
        android:layout_below="@+id/pictureFrame" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags"
        android:textColor="#89000000"
        android:id="@+id/userTags"
        android:layout_below="@+id/location"
        android:paddingLeft="16dp"/>

    <Space
        android:layout_width="10dp"
        android:layout_height="33dp"
        android:id="@+id/action_anchor"
        android:layout_alignBottom="@+id/pictureFrame" />


    <Button
        android:background="@drawable/dynamic_button_editprofile"
        android:id="@+id/edit_profile"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/action_anchor"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true">

        <Button
            android:background="#F8F9F9"
            android:id="@+id/my_listings"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:text="My Listings"
            android:textColor="#468DCB"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_toLeftOf="@+id/anchor_middle"
            android:layout_marginRight="20dp" />


        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:id="@+id/anchor_middle"
            android:layout_centerHorizontal="true" />


        <Button
            android:background="#F8F9F9"
            android:id="@+id/watchlist"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:text="Watchlist"
            android:textColor="#468DCB"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/anchor_middle"
            android:layout_alignTop="@+id/my_listings"
            android:layout_marginLeft="23dp" />



        </RelativeLayout>


</RelativeLayout>