<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/landing"
    android:background="@color/background_main"
    android:weightSum="1"
    android:icon="@drawable/actionbar_icon"
    android:label="Joblet"

    >


    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textSize="32sp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <ImageView android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/profile_picture"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/user_name"
        android:src="@drawable/default_picture"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/location"
        android:text="@string/user_currentLocation"
        android:layout_below="@+id/profile_picture"
        android:layout_centerHorizontal="true" />

    <TextView android:layout_width="wrap_content"
        android:id="@+id/text_reputation_landingPage"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Reputation:"
        android:textColor="#5B5B5B"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/location"
        android:layout_alignLeft="@+id/reputation_layout"
        android:layout_marginTop="5dp" />


    <RelativeLayout android:layout_width="300dp"
        android:layout_height="105dp"
        android:layout_gravity="center"
        android:id="@+id/reputation_layout"
        android:background="#CCBABABA"
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/text_reputation_landingPage"
        android:layout_centerHorizontal="true">

        <ImageView android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/reputationUp"
            android:src="@drawable/reputation_up"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="17dp" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="#000000"
            android:id="@+id/positive_reputation"
            android:textSize="24dp"
            android:layout_toRightOf="@+id/reputationUp"
            android:layout_toEndOf="@+id/reputationUp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp" />

        <ImageView android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/reputationDown"
            android:src="@drawable/reputation_down"
            android:layout_toStartOf="@+id/positive_reputation"
            android:layout_below="@+id/reputationUp"
            android:layout_toLeftOf="@+id/positive_reputation" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/negative_reputation"
            android:textSize="24dp"
            android:text="00"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_alignBottom="@+id/reputationDown"
            android:layout_alignRight="@+id/positive_reputation" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:textStyle="bold"
            android:text="Lists:"
            android:textColor="#000000"
            android:id="@+id/lists_label"
            android:layout_alignTop="@+id/lists_completed"
            android:layout_toLeftOf="@+id/lists_completed"
            android:layout_toStartOf="@+id/lists_completed" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:hint="00"
            android:textColor="#000000"
            android:id="@+id/lists_completed"
            android:layout_marginRight="49dp"
            android:layout_alignTop="@+id/positive_reputation"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:textStyle="bold"
            android:text="Jobs:"
            android:textColor="#000000"
            android:id="@+id/jobs_label"
            android:layout_alignTop="@+id/reputationDown"
            android:layout_alignLeft="@+id/lists_label"
            android:layout_alignStart="@+id/lists_label" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:hint="00"
            android:textColor="#000000"
            android:id="@+id/jobs_completed"
            android:layout_alignTop="@+id/jobs_label"
            android:layout_alignLeft="@+id/lists_completed"
            android:layout_alignStart="@+id/lists_completed" />

    </RelativeLayout>

    <Button
        android:background="@drawable/whatever"
        android:id="@+id/editProfile"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="Edit Profile"
        android:textColor="#F9F9F9"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/reputation_layout"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/whatever"
        android:id="@+id/my_listings"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:text="My Listings"
        android:textColor="#F9F9F9"
        android:textSize="28sp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editProfile"
        android:layout_centerHorizontal="true" />

</RelativeLayout>