<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_launch"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_listing_title"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:text="sample"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />
    
    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/listing_picture"
        android:src="@drawable/default_picture"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view_listing_title" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/listing_picture"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout_info"
        android:background="#333333"
        android:paddingBottom="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_listing_current_bid"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:id="@+id/view_listing_owner_reputation"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/view_listing_current_bid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:id="@+id/view_listing_job_location"
            android:layout_below="@+id/view_listing_owner_reputation"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:id="@+id/view_listing_owner_name"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/view_listing_job_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:id="@+id/view_listing_time_created"
            android:layout_below="@+id/view_listing_owner_name"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:id="@+id/view_listing_tag"
            android:layout_below="@+id/view_listing_time_created"
            android:layout_centerHorizontal="true" />

        </LinearLayout>



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Make A Bid"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_blue"
        android:textAllCaps="false"
        android:id="@+id/view_listing_make_bid"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/linearLayout_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>