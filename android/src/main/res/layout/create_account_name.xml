<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:genius="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your name"
        android:textSize="22sp"
        android:textColor="@color/primary_information"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_enteryourname" />


    <net.qiujuer.genius.widget.GeniusEditText
        android:id="@+id/first_name"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/text_enteryourname"
        android:layout_centerHorizontal="true"
        android:hint="First Name"
        android:layout_marginTop="22dp"
        genius:g_theme=""
        />


    <net.qiujuer.genius.widget.GeniusEditText
        android:id="@+id/last_name"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/first_name"
        android:layout_centerHorizontal="true"
        android:hint="Last Name"
        android:layout_marginTop="16dp" />

</RelativeLayout>