<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:genius="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write a short description of you \nand your skills (Max 400 chars)"
        android:textSize="22sp"
        android:textColor="@color/primary_information"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_bio" />

    <net.qiujuer.genius.widget.GeniusEditText
        android:id="@+id/bio"
        android:layout_width="fill_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_weight="2"
        android:layout_height="45dp"
        android:layout_below="@+id/text_bio"
        android:layout_centerHorizontal="true"
        android:hint="Bio"
        android:background="@color/LuciteGreen_Primary"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingLeft="12dp"
        android:layout_marginTop="22dp"
        android:maxLength="400"
        />
    <net.qiujuer.genius.widget.GeniusButton
        android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="14dp"
        genius:g_textAppearance="light"
        genius:g_theme="@array/ScubaBlue"
        genius:g_touchEffect="ripple"
        genius:g_blockButtonEffectHeight="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp" />

</RelativeLayout>