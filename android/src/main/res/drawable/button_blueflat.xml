<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW LAYER -->

            <!-- CONTENT LAYER -->
            <item >
                <shape >
                    <corners
                        android:radius="2dp"
                        />
                    <gradient
                        android:angle="270"
                        android:centerX="50%"
                        android:centerColor="#ff4ba0e3"
                        android:startColor="#468DCB"
                        android:endColor="#468DCB"
                        android:type="linear"
                        />

                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER1 -->

            <!-- CONTENT LAYER -->
            <item android:bottom="2dp" android:right="1dp">
                <shape>
                    <corners
                        android:radius="2dp"
                        />
                    <gradient
                        android:angle="270"
                        android:centerX="50%"
                        android:centerColor="#468DCB"
                        android:startColor="#468DCB"
                        android:endColor="#468DCB"
                        android:type="linear"
                        />

                </shape>
            </item>
        </layer-list>
    </item>
</selector>
