<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:bottom="6dp" android:top="6dp" android:left="6dp"
        android:right="6dp">
        <shape android:shape="rectangle">
            <gradient android:gradientRadius="50%p"
                android:type="linear"
                android:angle="270"
                android:startColor="#000000"
                android:endColor="#55000000"
                />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item
        android:bottom="5dp" android:top="5dp" android:left="5dp"
        android:right="5dp">

        <shape android:shape="rectangle">
            <solid
                android:color="#AAAAAA"
                />
            <corners android:radius="5dp" />
        </shape>
    </item>


</layer-list>
