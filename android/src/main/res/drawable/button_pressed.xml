<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:bottom="2dp" android:top="2dp" android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <gradient android:gradientRadius="50%p"
                android:type="linear"
                android:angle="270"
                android:startColor="#000000"
                android:endColor="#55000000"
                />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item
        android:bottom="3dp" android:top="1dp" android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid
                android:color="#A5A3A3"
                />
            <corners android:radius="15dp" />
        </shape>
    </item>


</layer-list>
