<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW LAYER1 -->
            <item android:bottom="2dp" android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="#30000000" />
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="#20000000" />
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#10000000" />
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="3dp" android:right="1dp"
                android:left="1dp">
                <shape >
                    <corners
                        android:radius="5dp"
                        />
                    <gradient
                        android:angle="270"
                        android:centerX="50%"
                        android:centerColor="#ff4c9ade"
                        android:startColor="#468DCB"
                        android:endColor="#468DCB"
                        android:type="linear"
                        />

                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER1 -->
            <item android:bottom="2dp" android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="#30000000" />
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="#20000000" />
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#10000000" />
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="3dp" android:right="1dp"
                android:left="1dp">
                <shape>
                <corners
                    android:radius="5dp"
                    />
                <gradient
                    android:angle="270"
                    android:centerX="50%"
                    android:centerColor="#468DCB"
                    android:startColor="#468DCB"
                    android:endColor="#468DCB"
                    android:type="linear"
                    />

            </shape>
            </item>
        </layer-list>
    </item>
</selector>
