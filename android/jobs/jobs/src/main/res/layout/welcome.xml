<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/custom_theme_color"
    >

    <ImageView android:layout_width="250dp"
               android:layout_height="250dp"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="50dp"
               android:id="@+id/logo_welcome"
               android:src="@drawable/logo"
               android:background="@android:drawable/dialog_holo_dark_frame"
        />

    <Button android:layout_width="275dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:text="@string/login"
            android:id="@+id/button_login"
            android:textSize="25sp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:backgroundTint="#31EB63"
            android:textColor="#2c3e50"

        />

    <Button android:layout_width="275dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:text="@string/create_account"
            android:id="@+id/button_createacc"
            android:textSize="25sp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:backgroundTint="#31EB63"
            android:textColor="#2c3e50"
        />

    <Button android:layout_width="275dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:text="@string/forgot_password"
            android:id="@+id/button_forgot_pass"
            android:textSize="25sp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:backgroundTint="#31EB63"
            android:textColor="#2c3e50"
        />

</LinearLayout>