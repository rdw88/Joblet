<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="21sp"
              android:id="@+id/job_name"
              android:layout_marginStart="10dp"
              android:layout_marginLeft="10dp"
              android:textStyle="bold"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:id="@+id/owner"
              android:layout_below="@id/job_name"
              android:layout_marginStart="10dp"
              android:layout_marginLeft="10dp"
              android:textStyle="bold"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:id="@+id/listing_tags"
              android:layout_below="@id/owner"
              android:layout_marginLeft="10dp"
              android:layout_marginStart="10dp"
              android:layout_marginBottom="2dp"
            />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="21sp"
              android:id="@+id/owner_reputation"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="15dp"
              android:layout_marginEnd="15dp"
            />

    <ImageView android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_centerVertical="true"
               android:layout_toLeftOf="@id/owner_reputation"
               android:layout_toStartOf="@id/owner_reputation"
               android:src="@drawable/smile"
               android:id="@+id/smile_pic"/>


</RelativeLayout>