<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/custom_theme_color"
    android:focusable="true">

    <ImageView android:layout_width="250dp"
               android:layout_height="250dp"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="50dp"
               android:id="@+id/logo_welcome"
               android:src="@drawable/logo"
        android:background="@android:drawable/alert_dark_frame"
        android:layout_marginBottom="10dp" />

    <Button
        android:background="@drawable/button"
        android:id="@+id/button_login"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:text="Login"
        style="@style/button_text"
        android:layout_gravity="center_horizontal"
        android:elegantTextHeight="false" />

    <Button
        android:background="@drawable/button"
        android:id="@+id/button_createacc"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:text="Create Account"
        style="@style/button_text"
        android:layout_gravity="center_horizontal"
         />

    <Button
        android:background="@drawable/button"
        android:id="@+id/button_forgot_pass"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:text="Forgot Password"
        style="@style/button_text"
        android:layout_gravity="center_horizontal" />

</LinearLayout><!-- From: file:/C:/Users/Ryan/Documents/Coding%20Projects/Jobs/android/jobs/jobs/src/main/res/layout/welcome.xml -->
