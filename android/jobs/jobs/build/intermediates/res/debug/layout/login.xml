<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_theme_color"
    android:weightSum="1">

    <ImageView android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/logo_welcome"
        android:src="@drawable/logo"
        android:background="@android:drawable/dialog_holo_dark_frame"
        />


    <EditText android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:hint="  Email Address"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:id="@+id/email"
        android:background="#ecf0f1"
        />

    <EditText android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:hint=" Password"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:background="#ecf0f1"
        />

    <Button
        android:background="@drawable/button"
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:text="Log In"
        style="@style/button_text"
        android:layout_gravity="center_horizontal" />

</LinearLayout><!-- From: file:/C:/Users/Ryan/Documents/Coding%20Projects/Jobs/android/jobs/jobs/src/main/res/layout/login.xml -->
