<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_theme_color"
    android:weightSum="1">

    <ImageView android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/logo_welcome"
        android:src="@drawable/logo"
        android:background="@android:drawable/dialog_holo_dark_frame"
        />


    <EditText android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:hint="  Email Address"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:id="@+id/email"
        android:background="#ecf0f1"
        />

    <EditText android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:hint=" Password"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:background="#ecf0f1"
        />

    <Button android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Login"
        android:textSize="25dp"
        android:textColor="#2c3e50"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:backgroundTint="#31EB63"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:id="@+id/login"/>

</LinearLayout><!-- From: file:/C:/Users/Ryan/Documents/Coding%20Projects/Jobs/android/jobs/jobs/src/main/res/layout/login.xml -->