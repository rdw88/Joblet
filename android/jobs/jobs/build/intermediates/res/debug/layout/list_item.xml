<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_theme_color"
        >
        

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#1E874A"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Create Listing"
                android:textColor="#ecf0f1"
                android:textSize="30dp"
                android:id="@+id/title_create_listing"
                android:layout_centerInParent="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </RelativeLayout>
        
        <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Name:"
                android:textSize="26sp"
                android:textColor="#2c3e50"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"/>
        
            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="#ecf0f1"
                android:textSize="22sp"
                android:textColor="#ecf0f1"
                android:id="@+id/listing_name"
                android:hint=" Listing Name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner of Listing:"
            android:textSize="26sp"
            android:textColor="#2c3e50"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>
            />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#1E874A"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/user_name"
                android:textColor="#2c3e50"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags:"
            android:textSize="26sp"
            android:textColor="#2c3e50"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>
        />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seperate Tags by commas:"
            android:textSize="16sp"
            android:textColor="#2c3e50"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#ecf0f1"
            android:textSize="22sp"
            android:textColor="#ecf0f1"
            android:id="@+id/listing_tags"
            android:hint=" Tags"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            />
        <Button android:layout_width="220dp"
            android:layout_height="50dp"
            android:text="Choose Picture"
            android:textSize="25dp"
            android:textColor="#2c3e50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:backgroundTint="#31EB63"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:id="@+id/button_createListing_uploadPicture"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="filler for picture path [  ] checkbox to delete"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:paddingRight="25dp"
                />



                />
            </RelativeLayout>

        <Button android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Remove Checked"
            android:textSize="16dp"
            android:textColor="#2c3e50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="#31EB63"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:id="@+id/button_createListing_removeCheckedPicture"/>


        <Button android:layout_width="300dp"
            android:layout_height="75dp"
            android:text="Post Listing"
            android:textSize="25dp"
            android:textColor="#2c3e50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#31EB63"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:id="@+id/button_createListing_postListing"/>


    </LinearLayout>
</ScrollView><!-- From: file:/C:/Users/Jondar/.android/Jobs/android/jobs/jobs/src/main/res/layout/list_item.xml -->