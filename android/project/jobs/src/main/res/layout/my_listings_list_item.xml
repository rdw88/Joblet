<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/softwhite">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_jobtitle"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_listing_job_title"
            android:textSize="26sp"
            android:textColor="@color/primary_information"
            android:text="Job Title"
            android:paddingLeft="@dimen/big_padding"
            android:paddingRight="@dimen/big_padding"
            android:paddingBottom="@dimen/mini_padding"
            android:paddingTop="@dimen/mini_padding" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_belowtitle"
        android:layout_below="@+id/container_jobtitle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_listing_current_bid"
            android:textSize="14sp"
            android:textColor="#378E43"
            android:text="Current bid"

            android:padding="@dimen/small_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_listing_tag"
            android:textSize="12sp"
            android:textColor="@color/secondary_information"
            android:text="tag"
            android:layout_alignParentRight="true"
            android:padding="@dimen/small_padding" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_bottom"
        android:layout_below="@+id/container_belowtitle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listing_timeleft"
            android:text="1d 20h 20m"
            android:textSize="12sp"
            android:textColor="@color/secondary_information"
            android:padding="@dimen/small_padding"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_views"
            android:text="Views:"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/listing_ownerreputation"
            android:paddingRight="@dimen/mini_padding"
            android:paddingTop="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"
            android:paddingLeft="@dimen/small_padding" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listing_ownerreputation"
            android:text="00"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/secondary_information"
            android:textIsSelectable="false"
            android:paddingLeft="@dimen/mini_padding"
            android:paddingRight="@dimen/small_padding"
            android:paddingTop="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_listing_is_active"
            android:textSize="14sp"
            android:text="listing active?"
            android:padding="@dimen/small_padding" />

        <com.rey.material.widget.Button
            sytle="@style/defaultButtonWithRipple"
            android:layout_height="@dimen/button_height"
            android:layout_width="@dimen/button_width"
            android:text="PREVIEW"
            android:textSize="@dimen/button_textsize"
            android:layout_below="@+id/my_listing_is_active"
            android:layout_margin="@dimen/small_padding"
            android:id="@+id/btn_preview" />

        <com.rey.material.widget.Button
            sytle="@style/defaultButtonWithRipple"
            android:layout_height="@dimen/button_height"
            android:layout_width="@dimen/button_width"
            android:text="CANCEL"
            android:textSize="@dimen/button_textsize"
            android:layout_below="@+id/my_listing_is_active"
            android:layout_margin="@dimen/small_padding"
            android:id="@+id/btn_cancel"
            android:layout_toRightOf="@+id/btn_preview" />

    </RelativeLayout>



</RelativeLayout>