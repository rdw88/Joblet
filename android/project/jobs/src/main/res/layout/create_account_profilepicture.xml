<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:genius="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="175dp"
        android:layout_height="131.25dp"
        android:id="@+id/preview"
        android:src="@drawable/default_profile_picture"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload a profile picture, this will be the picture other users see when they view your profile."
        android:textSize="20sp"
        android:textColor="@color/primary_information"
        android:id="@+id/text_password"
        android:layout_below="@+id/text_uploadpicture"
        android:padding="@dimen/big_padding"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Picture"
        android:textSize="34sp"
        android:textColor="@color/primary_information"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_uploadpicture"
        android:padding="@dimen/big_padding" />

    <com.rey.material.widget.Button
        style="@style/buttonlanding"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="Upload Picture"
        app:rd_enable="true"
        android:id="@+id/upload_picture"
        android:layout_below="@+id/preview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_below="@+id/upload_picture">


        <com.rey.material.widget.Button
            style="@style/buttonlanding"
            android:layout_width="@dimen/button_widthshort"
            android:layout_height="@dimen/button_height"
            android:text="PREVIOUS"
            app:rd_enable="true"
            android:id="@+id/profilepic_previous"
            android:layout_toLeftOf="@+id/profilepic_midanchor"
            android:layout_marginRight="24dp" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:id="@+id/profilepic_midanchor"
            android:layout_centerHorizontal="true" />

        <com.rey.material.widget.Button
            style="@style/buttonlanding"
            android:layout_width="@dimen/button_widthshort"
            android:layout_height="@dimen/button_height"
            android:layout_toRightOf="@+id/profilepic_midanchor"
            android:text="NEXT"
            app:rd_enable="true"
            android:id="@+id/profilepic_next"
            android:layout_marginLeft="24dp" />


    </RelativeLayout>

</RelativeLayout>
    </ScrollView>