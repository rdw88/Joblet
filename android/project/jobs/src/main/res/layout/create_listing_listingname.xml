<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">
    
    <TextView
        style="@style/insturctionsTitle"
        android:id="@+id/instructionsTitle"
        android:text="Job Listing Title"
        />
    
    <TextView
        style="@style/instructionsSubTitle"
        android:id="@+id/instructionsSubTitle"
        android:text="Create a name for your job listing that reflects the type of job that it is."/>

    <com.rey.material.widget.EditText
        style="@style/edittextFullspan"
        android:maxLength="100"
        android:id="@+id/listingTitle"
        app:et_inputId="@+id/listingTitleWrapper"
        app:et_supportMode="charCounter"
        android:hint="Max 100 Characters"
        app:et_labelEnable="true"
        app:et_supportPadding="@dimen/small_padding"
        app:et_supportTextColor="@color/secondary_information"
        />

    <RelativeLayout
        style="@style/nextprevContainer"
        android:layout_marginTop="8dp"
        android:id="@+id/listingTitleNextPrevContainer">
        <com.rey.material.widget.Button
            style="@style/buttonmedWithRipple"
            android:layout_width="@dimen/button_widthshort"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_med"
            android:text="PREVIOUS"
            android:id="@+id/listingTitlePrev"
            android:layout_toLeftOf="@+id/midanchor"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:id="@+id/midanchor"
            android:layout_centerInParent="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />
        <com.rey.material.widget.Button
            style="@style/buttonmedWithRipple"
            android:layout_width="@dimen/button_widthshort"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_med"
            android:text="NEXT"
            android:id="@+id/listingTitleNext"
            android:layout_toRightOf="@+id/midanchor" />

    </RelativeLayout>

</LinearLayout>