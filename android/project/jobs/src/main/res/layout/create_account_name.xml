<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:genius="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="34sp"
        android:textColor="@color/primary_information"
        android:id="@+id/text_nametitle"
        android:padding="@dimen/big_padding"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your real name, this is the name other users will see on your profile"
        android:textSize="20sp"
        android:textColor="@color/primary_information"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:id="@+id/text_enteryourname"
        android:layout_below="@+id/text_nametitle"
        android:padding="@dimen/big_padding" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:hint="First Name"
        android:textColor="@color/primary_information"
        android:textColorHint="@color/secondary_information"
        android:paddingLeft="12dp"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_centerInParent="true" />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/first_name"
        android:layout_centerHorizontal="true"
        android:hint="Last Name"
        android:textColor="@color/primary_information"
        android:textColorHint="@color/secondary_information"
        android:paddingLeft="12dp"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp">


        <com.rey.material.widget.Button
            style="@style/buttonlanding"
            android:layout_width="@dimen/button_widthshort"
            android:layout_height="@dimen/button_height"
            android:text="PREVIOUS"
            app:rd_enable="true"
            android:id="@+id/name_previous"
            android:layout_toLeftOf="@+id/name_midanchor"
            android:layout_marginRight="24dp" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:id="@+id/name_midanchor"
            android:layout_centerHorizontal="true" />

        <com.rey.material.widget.Button
            style="@style/buttonlanding"
            android:layout_width="@dimen/button_widthshort"
            android:layout_height="@dimen/button_height"
            android:layout_toRightOf="@+id/name_midanchor"
            android:text="NEXT"
            app:rd_enable="true"
            android:id="@+id/name_next"
            android:layout_marginLeft="24dp" />


    </RelativeLayout>

</RelativeLayout>