<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            style="@style/insturctionsTitle"
            android:id="@+id/instructionsTitle"
            android:text="Job Listing Tag"
            />

        <TextView
            style="@style/instructionsSubTitle"
            android:id="@+id/instructionsSubTitle"
            android:text="Choose a tag that best describes the type of job you are listing."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/big_padding"
            android:text="tag"
            android:textColor="@color/primary_information"
            android:textSize="20sp"
            android:id="@+id/tag"
            android:layout_gravity="center_horizontal" />

        <com.rey.material.widget.Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_med"
            android:text="Choose Tag"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp" />

        <RelativeLayout
            style="@style/nextprevContainer"
            android:layout_marginTop="12dp"
            android:id="@+id/listingTagNextPrevContainer">
            <com.rey.material.widget.Button
                style="@style/buttonmedWithRipple"
                android:layout_width="@dimen/button_widthshort"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_med"
                android:text="PREVIOUS"
                android:id="@+id/listingTagPrev"
                android:layout_toLeftOf="@+id/midanchor"
                />
            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:id="@+id/midanchor"
                android:layout_centerInParent="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" />
            <com.rey.material.widget.Button
                style="@style/buttonmedWithRipple"
                android:layout_width="@dimen/button_widthshort"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_med"
                android:text="NEXT"
                android:id="@+id/listingTagNext"
                android:layout_toRightOf="@+id/midanchor" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>