<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/title_color">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/createListing_title"
        android:text="Edit Profile"
        android:textSize="42dp"
        android:id="@+id/text_editprofile"
        android:textColor="@color/softwhite"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:id="@+id/text_first_name"
        android:textSize="20sp"
        android:textColor="@color/softwhite"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint=" First Name"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:textSize="14sp"
        android:id="@+id/first_name"
        android:textColor="@color/primary_information"
        android:background="#F8F9F9"
        android:padding="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:id="@+id/text_last_name"
        android:textColor="@color/softwhite"
        android:textSize="20sp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:layout_marginTop="8dp" />



    <EditText android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint=" Last Name"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:id="@+id/last_name"
        android:textSize="14sp"
        android:textColor="@color/primary_information"
        android:background="#F8F9F9"
        android:padding="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biography"
            android:id="@+id/text_bio"
            android:textSize="20sp"
            android:textColor="@color/softwhite"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:layout_marginTop="8dp" />



        <EditText android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint=" Enter information about yourself \n(max 400 characters)"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/primary_information"
            android:id="@+id/bio"
            android:background="#F8F9F9"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/text_email"
        android:textSize="20sp"
        android:textColor="@color/softwhite"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:layout_marginTop="8dp" />


    <EditText android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint=" Email"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:textSize="14sp"
        android:background="#F8F9F9"
        android:textColor="@color/primary_information"
        android:padding="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/text_password"
        android:textSize="20sp"
        android:textColor="@color/softwhite"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:layout_marginTop="8dp" />


    <EditText android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:textColor="@color/primary_information"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:background="#F8F9F9"
        android:padding="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <EditText android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Password (again)"
        android:id="@+id/password2"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:textColor="@color/primary_information"
        android:layout_marginTop="10dp"
        android:background="#F8F9F9"
        android:padding="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:id="@+id/text_city"
            android:textSize="20sp"
            android:textColor="@color/softwhite"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:layout_marginTop="8dp" />


    <AutoCompleteTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Nearest City"
        android:id="@+id/city"
        android:layout_marginTop="10dp"
        android:background="#F8F9F9"
        android:textSize="14sp"
        android:completionThreshold="4"
        android:layout_marginBottom="10dp"
        android:textColor="@color/primary_information"
        android:singleLine="true"
        android:padding="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Picture"
            android:id="@+id/text_profilepic"
            android:textSize="20sp"
            android:textColor="@color/softwhite"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:layout_marginTop="8dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/softwhite"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:id="@+id/profile_picture"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true" />

            </RelativeLayout>


        <com.rey.material.widget.Button
            android:id="@+id/upload_picture"
            android:layout_width="@dimen/button_widthwide"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="12dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textColor="#F9F9F9"
            android:text="Upload Photo"
            android:textSize="@dimen/button_textsize"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            style="@style/buttonWithRipple"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/container_timeleft" />



        <com.rey.material.widget.Button
            android:id="@+id/button_createListing_postListing"
            android:layout_width="@dimen/button_widthwide"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="6dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textColor="#F9F9F9"
            android:text="SAVE CHANGES"
            android:textSize="@dimen/button_textsize"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            style="@style/buttonWithRipple"
            android:layout_marginBottom="22dp"
            android:layout_below="@+id/container_timeleft" />


    </LinearLayout>

</ScrollView>