<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softwhite">

    <com.rey.material.widget.CheckBox
        style="@style/Material.Drawable.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cbd_strokeColor="@color/secondary_information"
        android:layout_marginLeft="@dimen/big_padding"
        android:layout_centerVertical="true"
        android:id="@+id/tag_checkbox" />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
            android:id="@+id/tag_name"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/primary_information"
            android:text="Programming"
            android:layout_toRightOf="@id/tag_checkbox"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/big_padding"
            android:layout_marginTop="@dimen/mini_padding"
            android:layout_marginBottom="@dimen/mini_padding"
            android:layout_marginRight="@dimen/big_padding"
        />

</RelativeLayout>
