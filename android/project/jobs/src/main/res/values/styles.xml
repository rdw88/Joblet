<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Colors -->
    <color name="button">#2196f3</color>
    <color name="button_med">#ffdf81</color>
    <color name="title_color">#f05d5e</color>
    <color name="title_color_tint">#E65B5B</color>
    <color name="title_color_fade">#88f05d5e</color>
    <color name="title_color_ultra_fade">#22f05d5e</color>
    <color name="background_light">#EAEAEA</color>
    <color name="primary_information">#222</color>
    <color name="secondary_information">#777</color>
    <color name="softwhite">#FAFAFA</color>
    <color name="moneygreen">#4CAF50</color>
    <color name="gradient_light_start">#30000000</color>
    <color name="tab_background">#F38E1F</color>
    <color name="tab_background_selected">#FFCC80</color>
    <color name="transparent">#00000000</color>
    <color name="tab_highlight">#ff9ecfbf</color>
    <color name="indicator_color">#2196F3</color>
    <!-- #00E5FF -->
    <color name="mdtp_accent_color">#f05d5e</color>
    <color name="mdtp_accent_color_dark">#f05d5e</color>

    <!-- Material DEFAULT colors -->
    <color name="material_drawer_primary">#2196F3</color>
    <color name="material_drawer_primary_dark">#1976D2</color>
    <color name="material_drawer_primary_light">#BBDEFB</color>
    <color name="material_drawer_accent">#FF4081</color>

    <!-- OVERWRITE THESE COLORS FOR A LIGHT THEME -->
    <!-- MaterialDrawer DEFAULT colors -->
    <color name="material_drawer_background">#F9F9F9</color>
    <!-- Material DEFAULT text / items colors -->
    <color name="material_drawer_icons">#FFF</color>
    <color name="material_drawer_primary_text">#DE000000</color>
    <color name="material_drawer_primary_icon">#8A000000</color>
    <color name="material_drawer_secondary_text">#8A000000</color>
    <color name="material_drawer_hint_text">#42000000</color>
    <color name="material_drawer_divider">#1F000000</color>


    <!-- Application themes. -->

    <style name="AppTheme2" parent="MaterialDrawerTheme.Light">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuTextView</item>
        <item name="colorPrimary">@color/title_color</item>
        <item name="colorPrimaryDark">@color/title_color</item>
        <item name="colorAccent">@color/background_light</item>
        <item name="colorControlNormal">#f05d5e</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>


        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_icons">@color/material_drawer_icons</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/title_color</item>
    </style>


    <style name="MyActionBarTabText">
        <item name="android:actionBarSize">@dimen/tab_bar_height</item>
        <item name="android:textColor">@color/softwhite</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="PopupMenu">
        <item name="android:popupBackground">@color/softwhite</item>
    </style>

    <style name="PopupMenuTextView" parent="@style/android:Widget.Holo.ListView.DropDown">
        <item name="android:textColor">#DD000000</item>
        <item name="android:divider">@color/divider_grey</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:background">@color/softwhite</item>
    </style>


    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/softwhite</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/title_color</item>
        <item name="colorPrimaryDark">@color/title_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/background_light</item>
        <item name="colorControlNormal">#f05d5e</item>
        <item name="colorControlActivated">#f05d5e</item>
        <item name="colorControlHighlight">#f05d5e</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:titleTextStyle">@style/AppTheme_ActionBar_Title</item>
        <item name="android:textSize">20sp</item>
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="android:background">@color/title_color</item>
        <item name="homeAsUpIndicator">@drawable/ic_menu_white_24dp</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_menu_white_24dp</item>
        <item name="android:showAsAction">always</item>
    </style>
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style  name="TabPageIndicator"  parent="Material.Widget.TabPageIndicator.Light">
        <item name="android:background">@color/title_color_tint</item>
        <item name="android:textColor">@color/softwhite</item>
        <item name="android:textSize">22sp</item>
        <item name="tpi_tabPadding">12dp</item>
        <item name="tpi_tabRipple">@style/TabRippleStyle</item>
        <item name="tpi_indicatorHeight">3dp</item>
        <item name="tpi_indicatorColor">@color/indicator_color</item>
        <item name="android:textAppearance">@style/TabText</item>
        <item name="tpi_mode">fixed</item>
    </style>

    <style name="TabText" >
        <item name="android:textColor">@color/softwhite</item>
    </style>

    <style name="TabRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="android:background">@color/title_color</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="rd_padding">0dp</item>
    </style>

    <style name="AppTheme_ActionBar_Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/softwhite</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ToolbarRippleStyle" parent="Material.Drawable.Ripple.Touch.MatchView.Light">
        <item name="rd_backgroundColor">@android:color/transparent</item>
        <item name="rd_rippleColor">#33FFFFFF</item>
    </style>

    <!-- RelativeView theme -->

    <style name="nextprevContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/big_padding</item>
    </style>

    <!-- TextView theme -->

    <style name="createListing_review_title">
    	<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
		<item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/primary_information</item>
    </style>

    <style name="createListing_review_description">
    	<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_information</item>
    </style>

    <style name="createListing_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">27sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/primary_information</item>

    </style>

    <style name="viewListing_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginLeft">@dimen/small_padding</item>
        <item name="android:textColor">#DDD</item>
    </style>

    <style name="createListing_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary_information</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="createListing_description">
        <item name="android:padding">@dimen/big_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_information</item>
    </style>

    <style name="listingCurbid">
        <item name="android:paddingLeft">@dimen/small_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/moneygreen</item>
    </style>

    <style name="listingdetails">
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:paddingRight">@dimen/big_padding</item>
        <item name="android:paddingLeft">@dimen/big_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="listinginfo">
    <item name="android:paddingTop">@dimen/small_padding</item>
    <item name="android:paddingBottom">@dimen/small_padding</item>
    <item name="android:paddingRight">@dimen/big_padding</item>
    <item name="android:paddingLeft">@dimen/big_padding</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/primary_information</item>
    </style>

    <style name="listinginfoNoPadding">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_information</item>
    </style>

    <!-- EditText theme -->

    <style name="edittextFullspan" parent="Material.Widget.EditText.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/big_padding</item>
    </style>


    <!-- Button theme -->

    <style name="buttonmedWithRipple" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@null</item>
        <item name="rd_cornerRadius">45dp</item>
    </style>

    <style name="buttonWithRipple" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@drawable/button</item>
        <item name="rd_cornerRadius">2dp</item>

    </style>

    <style name="buttonlanding" parent="buttonWithRipple">
        <item name="android:background">@drawable/button_landing</item>
    </style>

    <style name="Material.Widget.FloatingActionButton.Light" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="fab_radius">28dp</item>
        <item name="fab_elevation">4dp</item>
        <item name="fab_iconSize">24dp</item>
        <item name="fab_interpolator">@android:anim/decelerate_interpolator</item>
        <item name="fab_animDuration">@android:integer/config_mediumAnimTime</item>
    </style>

</resources>
